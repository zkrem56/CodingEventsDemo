@using CodingEventsDemo.Models

@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-area="" asp-controller="Events" asp-action="Add">New Events</a>
</p>

<p>
    <a aps-area="" asp-controller="Events" asp-action="Delete">Remove Events</a>
</p>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Event Name</th>
            <th>Event Info</th>
            <th>Contact Email</th>
            <th>Event Type</th>
        </tr>
        @foreach (var meeting in Model)
            {
                <tr>
                    <td>@meeting.Id</td>
                    <td>@meeting.Name</td>
                    <td>@meeting.Description</td>
                    <td>@meeting.ContactEmail</td>
                    <td>@meeting.Type</td>
                    <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@meeting.Id">Edit Event</a></td>
                </tr>
            }
    
    </table>
}



